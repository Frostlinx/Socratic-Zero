# ProSetting Training System Environment Variables Configuration
# Copy this file to .env and modify according to your setup

# ==================== Model Path Configuration ====================
SOLVER_MODEL_PATH=/path/to/your/solver/model
GENERATOR_MODEL_PATH=/path/to/your/generator/model

# ==================== Data File Configuration ====================
QUESTIONS_FILE=/path/to/your/questions.json
VALIDATION_DATA_FILE=./validation_data.json

# ==================== Workspace Configuration ====================
WORKSPACE_DIR=/workspace/prosetting
TRAINING_DATA_DIR=/workspace/prosetting/training_data
TRAJECTORY_DATA_DIR=/workspace/prosetting/trajectories
CHECKPOINT_DIR=/workspace/prosetting/checkpoints
LOG_DIR=/workspace/prosetting/logs
RESULTS_DIR=/workspace/prosetting/results

# ==================== Training Parameters Configuration ====================
TOTAL_ROUNDS=10
SAVE_ROUNDS=3,4,5,6,7,8,9,10
ATTEMPTS_PER_QUESTION=8

# ==================== GPU Configuration ====================
PHYSICAL_SOLVER_GPU=4
PHYSICAL_DPO_GPU=0,1,2,3,4,5,6,7

# ==================== Teacher Model Configuration ====================
TEACHER_BASE_URL=http://localhost:8000
TEACHER_API_KEY=
TEACHER_MODEL_NAME=/path/to/teacher/model
TEACHER_CONCURRENT_WORKERS=32
TEACHER_TIMEOUT=300
TEACHER_MAX_RETRIES=3
TEACHER_RETRY_DELAY=1.0

# ==================== TRL Training Configuration ====================
# TRL DPO training parameters (replaces VERL)
TRL_NUM_PROCESSES=8
TRL_MIXED_PRECISION=bf16
TRL_MAX_STEPS=100
TRL_PER_DEVICE_BATCH_SIZE=2
TRL_MAX_LENGTH=2048
TRL_LEARNING_RATE=5e-6
TRL_WARMUP_STEPS=10
TRL_GRADIENT_ACCUMULATION_STEPS=8

# Model output configuration
MODEL_OUTPUT_DIR=/workspace/prosetting/models

# ==================== Automated Training Configuration ====================
# Auto retry configuration
AUTO_RETRY_ENABLED=true
AUTO_CONTINUE_ON_FAILURE=false
CHECKPOINT_INTERVAL=1

# ==================== Other Configuration ====================
DEBUG_MODE=false
LOG_LEVEL=INFO
KEEP_TEMP_FILES=true

# ==================== Cache Configuration ====================
HF_CACHE_DIR=/workspace/prosetting/hf_cache
HF_HOME=/workspace/prosetting/hf_home
